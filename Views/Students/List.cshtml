@{
}

@model List<StudentInformationProject.Models.ViewModels.StudentListViewModel>

<h1>Students</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Class</th>
            <th>DOB</th>
            <th>Gender</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.ClassId</td>
                <td>@student.DateOfBirth</td>
                <td>@student.Gender</td>
                <td>
                    <a>Edit</a>
                </td>
            </tr>
        }
    </tbody>

</table>
